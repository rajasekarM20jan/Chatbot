<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ndroid="http://schemas.android.com/tools"
    android:background="#00ffffff">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/sendlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="350dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="end"
            android:background="@drawable/chatsend">
        <TextView
            android:id="@+id/textviewsendmsg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp"
            android:fontFamily="@font/latinotypeantartidaroundedmedium"
            android:gravity="center"
            android:textColor="@color/black"
            />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/receivelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:maxWidth="350dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/chatreceive">
        <TextView
            android:id="@+id/textviewreceivedmsg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp"
            android:fontFamily="@font/latinotypeantartidaroundedmedium"
            android:gravity="center"
            android:textColor="@color/black"
            />
        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>